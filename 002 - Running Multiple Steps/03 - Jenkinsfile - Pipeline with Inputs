pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('ask for name') {
	    	 input {
                	message "Name?"
			parameters {
                    		string(name: 'NAME')
                	}
		}
	}
        stage('ask for age') {
		input{
                	message "Age?"
			parameters {
                    		string(name: 'AGE')
                }
	}
        steps {
                echo "$NAME"
                echo "$AGE"
            }
        }
    }
}
